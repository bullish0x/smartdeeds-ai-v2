# Nginx configuration for Next.js static export
# Place this in your nginx server block configuration
# This ensures all routes are handled by the client-side router

server {
    listen 80;
    server_name your-domain.com;
    root /path/to/your/out;
    index index.html;

    # Serve static files directly
    location /_next/static/ {
        alias /path/to/your/out/_next/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Serve images and other static assets
    location /images/ {
        alias /path/to/your/out/images/;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # For all other routes, serve index.html to allow client-side routing
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Optional: Enable gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json;
}

